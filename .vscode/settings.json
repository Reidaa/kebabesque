{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/__pycache__": true,
        "**/.ruff_cache": true,
    },
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
    },
    "sqltools.useNodeRuntime": true,
    "sqltools.connections": [
        {
            "previewLimit": 300,
            "driver": "SQLite",
            "name": "Kebabs",
            "database": "./kebabs.sqlite3"
        }
    ]
}